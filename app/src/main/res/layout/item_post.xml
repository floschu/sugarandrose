<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="org.sugarandrose.app.ui.news.recyclerview.PostItemMvvm.ViewModel" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_margin_half"
        app:cardCornerRadius="6dp">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:onClick="@{vm::onClick}">

            <ImageView
                android:id="@+id/iv"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:adjustViewBounds="true"
                android:src="@{vm.post.image}"
                app:layout_constraintBottom_toTopOf="@id/tv_title"
                app:layout_constraintDimensionRatio="16:9"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/header" />

            <TextView
                android:id="@+id/tv_title"
                style="@style/Title.Accent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding"
                android:text="@{vm.post.title}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btn_fav"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv"
                tools:text="Title" />

            <ImageView
                android:id="@+id/btn_share"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="@dimen/margin"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:onClick="@{vm::onShareClick}"
                android:padding="@dimen/padding"
                android:src="@drawable/ic_share"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_default="wrap"
                app:layout_constraintTop_toBottomOf="@id/iv"
                app:layout_constraintWidth_default="wrap" />


            <ImageView
                android:id="@+id/btn_fav"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="@dimen/margin"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:onClick="@{vm::onFavoriteClick}"
                android:padding="@dimen/padding"
                android:src="@{vm.favorited ? @drawable/ic_favorite : @drawable/ic_favorite_border}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btn_share"
                app:layout_constraintHeight_default="wrap"
                app:layout_constraintTop_toBottomOf="@id/iv"
                app:layout_constraintWidth_default="wrap"
                tools:src="@drawable/ic_favorite_border" />

            <ProgressBar
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="@{vm.loading}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_default="wrap"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_default="wrap" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</layout>
