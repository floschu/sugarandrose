<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="org.sugarandrose.app.ui.news.recyclerview.PostItemMvvm.ViewModel" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_margin_half"
        app:cardCornerRadius="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:onClick="@{vm::onClick}"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingEnd="@dimen/card_horizontal_padding"
                android:paddingStart="@dimen/card_horizontal_padding"
                android:paddingTop="@dimen/card_vertical_padding">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_title"
                        style="@style/Title.Accent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@{vm.post.title}"
                        app:layout_constraintBottom_toTopOf="@id/tv_date"
                        app:layout_constraintEnd_toStartOf="@id/iv"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="Title" />

                    <TextView
                        android:id="@+id/tv_date"
                        style="@style/SubTitle.Accent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:date="@{vm.post.date}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/iv"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_title"
                        tools:text="Date" />

                    <ImageView
                        android:id="@+id/iv"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@{vm.post.image}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:src="@drawable/header" />
                </android.support.constraint.ConstraintLayout>

                <TextView
                    android:id="@+id/tv_excerpt"
                    style="@style/Text.Black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/vertical_padding"
                    app:fromHtml="@{vm.post.excerpt}"
                    tools:text="Lorem ipsum dolor sit amet, consetetur sadip sci elitr, sed diam nonumy." />
            </LinearLayout>

            <Button
                android:id="@+id/btn_cont"
                style="@style/SubTitle.Accent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:onClick="@{vm::onClick}"
                android:text="@string/cont"
                android:textAllCaps="false" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>
