<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="org.sugarandrose.app.ui.categories.overview.CategoriesMvvm.ViewModel" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginBottom="@dimen/card_margin_half"
            android:layout_marginEnd="-1dp"
            android:layout_marginStart="-1dp"
            android:layout_marginTop="-1dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="@{vm::onSearchClick}">

                <TextView
                    android:id="@+id/et_search"
                    style="@style/Text.Black.Secondary"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/vertical_padding"
                    android:layout_marginEnd="@dimen/horizontal_margin"
                    android:layout_marginStart="@dimen/horizontal_margin"
                    android:layout_marginTop="@dimen/vertical_padding"
                    android:drawablePadding="@dimen/card_horizontal_padding"
                    android:drawableStart="@drawable/ic_search_black"
                    android:gravity="center_vertical"
                    android:text="@string/search_hint" />
            </FrameLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:padding="@dimen/card_margin_half"
            app:adapter="@{vm.adapter}"
            app:layoutManager="android.support.v7.widget.GridLayoutManager"
            app:spanCount="2"
            tools:listitem="@layout/item_category" />
    </LinearLayout>
</layout>